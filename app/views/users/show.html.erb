<div class="container">
  <div class="profile-container">
    <% if @user.present? && @user.photo.present? %>
      <%= cl_image_tag @user.photo.key, class: "profile-image" %>
    <% else %>
      <%= image_tag "user1.png", class: "profile-image" %>
    <% end %>
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <h2>@<%= @user.user_name %></h2>
    <h3><%= @user.email %></h3>
    <p class="text-center"><%= @user.description %></p>
    <%= link_to "Edit",
      edit_user_path,
      class: "logout-button"
    %>
    <%= link_to "Log out",
      destroy_user_session_path,
      data: { turbo_method: :delete },
      class: "logout-button"
    %>
  </div>
</div>
