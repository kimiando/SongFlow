<div class="popup-location">
  <div class="location-header">
    <h1 class="location-name"><%= place.name %>
    </h1>
    <% if place.photo.attached? %>
      <%= cl_image_tag place.photo.key, height: 150, crop: :fill %>
    <% else %>
      <p>No photo attached</p>
    </div>
  <% end %>
  <%# add a photo here %>
  <hr>
  <p class="location-info"><i class="fa-solid fa-location-dot fa-bounce" style="color: #df8826;"></i> <%= place.address %></p>
  <p class="location-info"><strong><%= place.price_level %></strong></p>
  <div class="room-option">
    <p class="room-option-label"><em>Room Option:</em></p>
    <p class="room-option-value"><em><%= place.room_option %></em></p>
  </div>
</div>
