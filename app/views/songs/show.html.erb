<div class="song-page-container">
  <%= image_tag @song.photo_url, height: 300, crop: :fill, class: "song-image" %>
</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Add to playlist
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% current_user.playlists.each do |playlist| %>
          <%= simple_form_for [@bookmark] do |f| %>
            <%= f.association :playlist, as: :hidden, input_html: { value: playlist.id }%>
            <%= f.association :song, as: :hidden, input_html: { value: @song.id }%>
            <%= f.button :button do %>
              <%= playlist.name %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
